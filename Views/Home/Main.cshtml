@{
    ViewBag.Title = "Demo App - Registration";
}

<div class="container">
    <hr>
    <div ID="dvLogin" class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="card text-center" ">
                <div class="card-header">Demo Web App Login</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="text" id="username" class="form-control" autocomplete="off" required maxlength="100" placeholder="Enter username" />
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="password" id="pwd" class="form-control" autocomplete="off" required maxlength="100" placeholder="Enter password" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <br />
                            <input type="button" class="btn btn-primary" value="Login" onclick="login();">
                        </div>

                    </div>
                </div>
                <div class="card-footer text-body-secondary">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <br />
                            @Html.ActionLink("Register", "Create", "Registration")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4"></div>
    </div>


    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-body">
            Hello, world! This is a toast message.
            <div class="mt-2 pt-2 border-top">
                <button type="button" class="btn btn-primary btn-sm">Take action</button>
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="toast">Close</button>
            </div>
        </div>
    </div>
</div>
